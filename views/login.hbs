<form id="form" action="https://localhost:3113/user/login" method="post" class="m-0">
    <section class="vh-100" style="background-color: #508bfc;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card shadow-2-strong" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">
                            <h3 class="mb-5">Đăng nhập tài khoản</h3>
                            
                            <div class="input-group mb-3">
                                <span class="input-group-text w-25" id="username">Username</span>
                                <input type="text" class="form-control" placeholder="Username" aria-label="username" aria-describedby="Password"
                                    name="username" value="{{username}}">
                            </div>

                            <div class="input-group mb-3">
                                <span class="input-group-text w-25" id="password">Password</span>
                                <input type="password" class="form-control" placeholder="Password" aria-label="password" aria-describedby="Password"
                                    name="password" value="{{password}}">
                            </div>

                            <div class="d-flex flex-col align-items-center mb-4">
                                <div class="form-check d-flex justify-content-start me-4">
                                    {{#if check}}
                                    <input class="form-check-input" type="checkbox" name="check" id="form1Example3"
                                        checked />
                                    {{else}}<input class="form-check-input" type="checkbox" name="check"
                                        id="form1Example3" />
                                    {{/if}}
                                    <label class="form-check-label" for="form1Example3"> Ghi nhớ đăng nhập trong</label>
                                </div>
                                <select class="form-select" style="width: 100px; height: fit-content; padding: 4px;"
                                    aria-label="Default select example" name="expire">
                                    <option value="1800000" selected>30 phút</option>
                                    <option value="3600000">1 giờ</option>
                                    <option value="86400000">1 ngày</option>
                                </select>
                            </div>

                            <button class="btn btn-primary btn-lg btn-block" type="submit">Đăng nhập</button>

                            <p class="mt-4 text-danger">{{status}}</p>

                            <hr class="my-4">

                            <a href="/user/register" class="btn btn-lg btn-block btn-primary"
                                style="background-color: #dd4b39;" type="submit">Chưa có tài khoản ? Đăng ký ngay</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>